@model List<CMCS.Models.Claim>

@{
    ViewData["Title"] = "Manager View";
}

<h2>Verified Claims for Final Approval</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Notes</th>
            <th>Document</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Notes</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.DocumentName))
                    {
                        <a href="~/uploads/@claim.DocumentName" target="_blank">View Document</a>
                    }
                    else
                    {
                        <span>No document</span>
                    }
                </td>
                <td>@claim.Status</td>
                <td>
                    <form asp-action="Approve" method="post">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button name="action" value="approve" class="btn btn-success btn-sm">Approve</button>
                        <button name="action" value="reject" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
